<body>
    <%- include('../components/component1.ejs')%>
        <section style="  padding-left: 75px; padding-top: 37px;">
            <h1 class="display-4">Add one time Medication</h1><br>

            <form id="onetimeform" action="onetime" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="" class="form-label">Medicine Name:-</label>
                    <input required type="text" class="form-control" name="medicine" id="medname"
                        placeholder="Example Medicine">
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Description:-</label>
                    <input required type="text" class="form-control" name="description" id="desc"
                        placeholder="Another Description">
                </div>

                <div class="mb-3">
                    <label for="" class="form-label">Date:-</label>
                    <input required type="date" name="date" class="form-control" id="date"
                       >
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Time:-</label>
                    <input required type="time" name="time" class="form-control" id="time"
                      >
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Files:-</label>
                    <input required type="file" name="onetimefile" class="form-control" id="form">
                </div><br>

                <center><input required type="submit" onclick="return validateData()" class="btn btn-primary" value="Add Medication" id="onetimesubmitt"></center>
            </form>


        </section>

</body>
